{
  "manifest_version": 2,
  "name": "Lucidchart Maximizer",
  "version": "1.0.1",
  "description": "Remove the pesky UI on Lucidchart so you can focus on your work",
  "default_locale": "en",
  "icons": {
  	"128": "Icon128.png"
  },
  "content_scripts":[
    {
    	"matches": [
        "http://www.lucidchart.com/*",
        "https://www.lucidchart.com/*"
      ],
    	"css" : [
        "css/style.css"
      ],
    	"js" : [
        "js/jquery.js", 
        "js/scripts.js"
      ]
    }
  ]
}
